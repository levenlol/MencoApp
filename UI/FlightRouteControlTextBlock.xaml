<UserControl x:Class="MencoApp.UI.FlightRouteControlTextBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MencoApp.UI"
             mc:Ignorable="d" d:DesignWidth="230" Height="24">
    <StackPanel>
        <TextBlock x:Name="FlightRouteName" Text="0000 - 0000" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="LightBlue" FontFamily="Segoe UI Semibold" FontSize="14">
            <TextBlock.ContextMenu>
                <ContextMenu Padding="0" HasDropShadow="True">
                    <MenuItem Header="Delete" Click="MenuItem_Click_Delete" BorderThickness="0"/>
                </ContextMenu>
            </TextBlock.ContextMenu>
        </TextBlock>
    </StackPanel>
</UserControl>
