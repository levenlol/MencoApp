<Window x:Class="MencoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MencoApp"
        xmlns:m="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:ui="clr-namespace:MencoApp.UI"
        mc:Ignorable="d"
        Title="MencoApp" Height="600" Width="1080" WindowStyle="None"  ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" Background="#FF3a3a3a">

    <Grid x:Name="GridLayout">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ui:MencoMap Grid.Column="1" Grid.Row="1" Width="auto" Height="auto"/>
        <ui:FlightRouteControlPanel Grid.Column="0" Grid.Row="1" Width="230" Height="560"/>
    </Grid>
</Window>
